@page "/DeleteCenterAsset/{Id:int}"
@inject NavigationManager navManager
@inject CenterAssetService ser
@inject IStringLocalizer<ApplicationResource> localizer
@inject IJSRuntime js


<AuthorizeView>
    <Authorized>
        <PageTitle>Delete</PageTitle>

        @if (centerAssetDTO != null)
        {
            <div class="card">
                <div class="card-header">
                    Center Info
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td><strong>Center Name</strong></td>
                                <td>@centerAssetDTO.Center_Name</td>
                            </tr>
                            <tr>
                                <td><strong>Asset Name</strong></td>
                                <td>@centerAssetDTO.Asset_Name</td>
                            </tr>
                             <tr>
                                <td><strong>Quantity</strong></td>
                                <td>@centerAssetDTO.QTY</td>
                            </tr>
                            <tr>
                                <td><strong>Barcode</strong></td>
                                <td>@centerAssetDTO.Barcode</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="form-group d-flex justify-content-center">
                        <button class="btn btn-danger mx-2" @onclick="Delete">Delete</button>
                        <button class="btn btn-dark" @onclick="Cancel">Cancel</button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                no data found
            </div>
        }
    </Authorized>
    <NotAuthorized>
        <div class="alert alert-danger" role="alert">
            you are not authoriazed
        </div>
    </NotAuthorized>
</AuthorizeView>


@code {
    [Parameter]
    public int Id { get; set; }
    private CenterAssetDTO? centerAssetDTO = new();
  

    protected override async Task OnParametersSetAsync()
    {
      
        if (Id > 0)
        {
            centerAssetDTO = await ser.GetById(Id);
        }

    }
    async void Delete()
    {
        if (centerAssetDTO != null)
        {
            var result = await ser.Delete(Id);
            if (result)
            {
                navManager.NavigateTo("/AssetCenters");
            }
            else
            {
                await js.InvokeVoidAsync("alert", "there is a problem");
            }
        }
    }
    void Cancel()
    {
        navManager.NavigateTo("/AssetCenters");
    }
}